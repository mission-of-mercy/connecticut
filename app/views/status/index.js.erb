var requestsHtml = '<%= escape_javascript render(:partial => 'requests') %>';

$('#requests').html(requestsHtml);

$('#patients').text(<%= @patients %>);

<% if @requests.length > 0 %>
 $(document.body).addClass('red');
<% else %>
  $(document.body).removeClass('red');
<% end %>

